{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Trace"
    }
  },
  "AllowedHosts": "*",
  "EmailCredentions": {
    "EmailFrom": "asp2022gb@rodion-m.ru",
    "EmailTo": "valera.koltirin@yandex.ru",
    "NameOfSender": "Email sender from API",
    "ReTryCount": 3
  },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": "Information",
